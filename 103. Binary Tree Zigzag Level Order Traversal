vector<vector<int>> zigzagLevelOrder(TreeNode* root) 
    {
        vector<vector<int>> ans;
        if(root==nullptr) return ans;
        
        queue<TreeNode*> q;
        q.push(root);
        int j=0;
        
        while(!q.empty())
        {
            vector<int> op;
            TreeNode* temp;
            int n = q.size();
            for(int i=0;i<n;i++)
            {
                temp = q.front();
                q.pop();
                op.push_back(temp->val);
                if(temp->left) q.push(temp->left);
                if(temp->right) q.push(temp->right);
                
            }
            if(j%2!=0)
            {
                reverse(op.begin(),op.end());
            }
            
            ans.push_back(op);
            j++;  
        }
        
        return ans;
    }
